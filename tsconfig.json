{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["dom", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src", "__tests__"]
}